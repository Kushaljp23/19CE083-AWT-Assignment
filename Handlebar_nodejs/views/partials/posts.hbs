<div class="container">
<div class="row row-cols-1 row-cols-md-3 g-4">
 {{#each posts}}
 <div class="col">
 <div class="card h-100">
 <img src="{{this.product_image}}" style="width:350px;height:400px;" class="card-img-top"
 alt="{{product_id}}">
 <div class="card-body">
 <h5 class="card-title ">{{this.productname}}</h5>
 <h5 class="card-title badge bg-primary">Type : {{this.product_type}}</h5>
 <h5 class="card-title badge bg-secondary">Quantity: {{product_quantity}}</h5>
 <h5 class="card-title badge bg-info text-dark">Rs. {{product_cost}}</h5>
 <p class="card-text">{{this.description}}</p>
 <p class="card-text"><small class="text-muted"><a href="#" class="btn btn-primary">Buy Now</a></small>
 </p>
 </div>
 </div>
 </div>
 {{/each}}
</div>
</div>
